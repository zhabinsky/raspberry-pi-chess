<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width">
  <title>
    <%= htmlWebpackPlugin.options.title %>
  </title>

  <style>
    body {
      display: flex;
      width: 100%;
      height: 100%;
      margin: 0;
      background: rgba(30, 30, 30, 1)
    }

    #container {
      position: relative;
      height: 100vh;
      width: 100%;
      max-width: 1000px;
      display: flex;
      content: ' ';
      margin: 0 auto;
    }

    canvas {
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
    }
  </style>
</head>

<body>
  <div id="container"></div>
</body>

</html>